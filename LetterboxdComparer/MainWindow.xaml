<Window x:Class="LetterboxdComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LetterboxdComparer"
        Title="Letterboxd Comparer" Height="700" Width="600">

    <Window.Resources>
        <local:CountToHeightConverter x:Key="CountToHeightConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <local:MovieStatsViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <!-- CSV Picker Button -->
            <Button Content="Select CSV File" Command="{Binding PickCsvCommand}" Width="150" Margin="0,0,0,10"/>
            <!-- Pick Letterboxd ZIP Button -->
            <Button Content="Select ZIP File" Command="{Binding PickZipCommand}" Width="150" Margin="0,0,0,10"/>

            <!-- DataGrid showing the CSV -->
            <DataGrid ItemsSource="{Binding DataTableView}" AutoGenerateColumns="True" Height="250"/>

            <!-- Bar Chart -->
            <TextBlock Text="Bar Chart:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="300">
                <ItemsControl ItemsSource="{Binding YearCounts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Bottom" Margin="1">
                                <TextBlock Text="{Binding Count}" TextAlignment="Center"/>
                                <Border Width="20" Height="{Binding Count, Converter={StaticResource CountToHeightConverter}}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#99aabb"/> 
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#00E056"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                <TextBlock Text="{Binding Year}" TextAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
