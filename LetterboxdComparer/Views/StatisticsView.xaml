<UserControl x:Class="LetterboxdComparer.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <StackPanel>

            <!-- LOAD ZIP -->
            <Button Content="Select ZIP File"
                    Command="{Binding PickZipCommand}"
                    Width="150"
                    Margin="0,0,0,10"/>

            <!-- BAR CHART -->
            <TextBlock Text="Bar Chart:"
                       FontWeight="Bold"
                       Margin="0,10,0,5"/>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="465">
                <ItemsControl ItemsSource="{Binding MovieCountsPerYear}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                            <StackPanel VerticalAlignment="Bottom" Margin="1">
                                <TextBlock Text="{Binding Value}" TextAlignment="Center"/>
                                <Border Width="15" Height="{Binding Value, Converter={StaticResource CountToHeightConverter}}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#99aabb"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#00E056"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                <TextBlock Text="{Binding Key}" TextAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</UserControl>
