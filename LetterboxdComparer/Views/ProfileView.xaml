<UserControl x:Class="LetterboxdComparer.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">

        <DataGrid ItemsSource="{Binding StoredUsers}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">

            <DataGrid.Columns>

                <!-- Username -->
                <DataGridTextColumn Header="User"
                                    Binding="{Binding UserName}"
                                    Width="*" />

                <!-- Export Date -->
                <DataGridTextColumn Header="Exported"
                                    Binding="{Binding ExportDate, StringFormat=yyyy-MM-dd HH:mm}"
                                    Width="160" />

                <!-- Watch count -->
                <DataGridTextColumn Header="Watched Movies"
                                    Binding="{Binding WatchEvents.Count}"
                                    Width="140" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
